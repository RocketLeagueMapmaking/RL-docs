{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "array-bracket-spacing": ["error", "never"],
        "brace-style": "error",
        "camelcase": ["warn", {"properties": "never", "ignoreDestructuring": true}],
        "eol-last": "warn",
        "indent": ["warn", 4],
        "no-duplicate-imports": ["error", { "includeExports": true }],
        "no-empty-function": "warn",
        "no-unused-vars": "warn",
        "quotes": ["error", "single"],
        "semi": ["warn", "never"],
        "vars-on-top": "warn"
    }
}