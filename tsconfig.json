{
    "include": [
        "./eslint.config.js",
        "docs/.vitepress/**/*.ts"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true, 
        "strict": true,
        "skipLibCheck": true
    }
}